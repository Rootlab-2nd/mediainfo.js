{
  "name": "mediainfo.js",
  "version": "0.1.9",
  "description": "Emscripten port of MediaInfoLib displays information about video and audio files.",
  "author": "buzz",
  "repository": {
    "type": "git",
    "url": "https://github.com/buzz/mediainfo.js"
  },
  "bugs": "https://github.com/buzz/mediainfo.js/issues",
  "homepage": "https://github.com/buzz/mediainfo.js",
  "license": "BSD-2-Clause",
  "keywords": [
    "mediainfo",
    "emscripten",
    "video",
    "audio",
    "media"
  ],
  "files": [
    "LICENSE.txt",
    "README.md",
    "dist/"
  ],
  "scripts": {
    "build:bundles": "rollup --bundleConfigAsCjs --config",
    "build:cli": "tsc --outDir ./dist/ --module commonjs src/cli.ts",
    "build:cjs": "cross-env BABEL_ENV=CJS babel --extensions '.ts' --out-dir dist/cjs ./src",
    "build:declaration": "tsc --emitDeclarationOnly --declarationDir ./dist/ --declaration true src/index.ts",
    "build:deps": "bash scripts/build-deps.sh",
    "build:esm": "cross-env BABEL_ENV=ESM_UNBUNDLED babel --extensions '.ts' --out-dir dist/esm ./src",
    "build:wasm": "bash scripts/build.sh",
    "build": "npm run build:deps && npm run build:wasm && npm run build:esm && npm run build:cjs && npm run build:bundles && npm run build:declaration && npm run build:cli",
    "generate-types": "ts-node scripts/generate-types/main.ts && npx prettier -w src/types.generated.d.ts",
    "lint": "eslint .",
    "test": "jest",
    "type-check": "tsc --noEmit --project ."
  },
  "bin": {
    "mediainfo.js": "./dist/cli.js"
  },
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "browser": "./dist/bundles/index.esm.min.js",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/bundles/index.umd.min.js",
  "jsdelivr": "./dist/bundles/index.umd.min.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "module": "./dist/bundles/index.esm.js",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./MediaInfoModule.wasm": "./dist/MediaInfoModule.wasm",
    "./package.json": "./package.json"
  },
  "dependencies": {
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.4.1",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "@types/emscripten": "^1.39.6",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "babel-jest": "^29.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.4.1",
    "libxmljs2": "^0.31.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "rollup": "^3.12.1",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "xml2js": "^0.4.23"
  }
}
